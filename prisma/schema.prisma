generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Visitor {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  count  Int
  updatedAt DateTime
 }

model Bows {
  id  String @id @default(auto()) @map("_id") @db.ObjectId 
  images String[]  
  name String
  description String
  available String
  published Boolean
  english Boolean
  new Boolean
  metadata String?
  price String
  createdAt DateTime
  updatedAt DateTime
}

model Bass {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  images String[] 
  name String
  description String
  available String
  published Boolean
  english Boolean
  new Boolean
  metadata String?
  price String
  createdAt DateTime
  updatedAt DateTime
}

model Slider {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  title String
  subtitle String
  description String
  active Boolean
  createdAt DateTime
  updatedAt DateTime
}

model Blog {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  title String
  subtitle String
  description String
  blogtext String
  template String
  english Boolean @default(false)
  active Boolean
  metadata String?
  createdAt DateTime
  updatedAt DateTime
}